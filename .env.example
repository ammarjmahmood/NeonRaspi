# ============================================
# NEON PI - Environment Configuration
# ============================================
# Copy this file to .env and fill in your keys
# ============================================

# Google Gemini API
# Get your key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ElevenLabs API
# Get your key from: https://elevenlabs.io (Profile Settings > API Key)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM  # Default: Rachel (natural female voice)

# Spotify API
# Create an app at: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8000/callback/spotify

# OpenWeather API (for weather MCP)
# Get your key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Optional: Google Calendar OAuth
# Download credentials.json from Google Cloud Console
GOOGLE_CALENDAR_CREDENTIALS=./credentials/google_calendar.json

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Audio Configuration
AUDIO_INPUT_DEVICE=default
AUDIO_OUTPUT_DEVICE=default
